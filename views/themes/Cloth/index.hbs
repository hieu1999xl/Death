{{> themes/Cloth/front-menu}}
<div class="sugges">
    <div class="row app__content">

        <div class="col l-2 m-0 c-0">
            <nav class="category">
                <h3 class="category__heading">
                    <i class="category__heading-icon fas fa-list"></i> Danh mục
                </h3>
                <ul class="category-list">
                    <li class="category-item category-item--active {{#unless searchTerm}}active{{/unless}}">
                        <a href="/" class="category-item__link">Home</a>
                    </li>
                    {{#each menu.items}}
                    <li class="nav-item" {{#menuMatch this.title @root.searchTerm}}{{/menuMatch}}
                        {{#menuMatch this.title @root.title}}{{/menuMatch}}>
                        <a class="nav-link" href="{{this.link}}">{{this.title}}</a>
                    </li>
                    {{/each}}
                </ul>
            </nav>
        </div>
        <div class="col l-10 m-12 c-12">
            <div class="home-fitter hide-on-mobile-tablet">
                <span class="home-fitter__label">Sắp xếp theo</span>
                <button class="home-fitter__btn btn">Phổ biến</button>
                <button class="home-fitter__btn btn btn__primary">Mới nhất</button>
                <button class="home-fitter__btn btn">Bán chạy</button>
                <div class="select-input">
                    <span class="select-input__label">Giá</span>
                    <i class="select-input__icon fas fa-angle-down"></i>
                    <ul class="select-input__list">
                        <li class="select-input__item">
                            <a href="" class="select-input__link">Giá: Thấp đến cao</a>
                        </li>
                        <li class="select-input__item">
                            <a href="" class="select-input__link">Giá: Cao đến thấp</a>
                        </li>
                    </ul>
                </div>
                <div class="home-fitter__page">
                    <span class="home-fitter__page-num">
                        <span class="home-fitter__page-current">1</span>/14
                    </span>
                    <div class="home-fitter__page-control">
                        <a href="" class="home-fitter__page-btn home-fitter__page-btn--disable">
                            <i class="home-fitter__page-icon fas fa-angle-left"></i>
                        </a>
                        <a href="" class="home-fitter__page-btn">
                            <i class="home-fitter__page-icon fas fa-angle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
