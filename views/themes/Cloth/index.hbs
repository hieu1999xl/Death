            <div class="home-product">
                <div class="row sm-gutter">

                    <div class="productsWrapper col-sm-12">
                        {{#if filtered}}
                        <div class="product-layout product-results col-sm-12">
                            {{#ifCond @root.paginateUrl '==' 'category'}}
                            <h1>{{ @root.__ "Category" }}: <strong>{{@root.searchTerm}}</strong></h1>
                            {{else}}
                            <h1>{{ @root.__ "Search results" }}: <strong>{{@root.searchTerm}}</strong></h1>
                            {{/ifCond}}
                        </div>
                        {{/if}}
                        <div class="row product-layout">
                            {{#ifCond results.length '==' 0}}
                            <div class="col-sm-12">
                                <p class="text-danger">{{ @root.__ "No products found" }}</p>
                            </div>
                            {{/ifCond}}
                            {{#each results}}
                            <div class="{{perRowClass ../config.productsPerRow}}">

                                {{#if productPermalink}}
                                <div class="home-product-item">
                                    <a href="/product/{{this.productPermalink}}">
                                        <div class="home-product-item__img">
                                            {{#if productImage}}
                                            <img class="img-fluid img-min" src="{{this.productImage}}" alt="...">
                                            {{else}}
                                            <img class="img-fluid img-min" src="/uploads/placeholder2.jpg" alt="...">
                                            {{/if}}
                                        </div>
                                        <h3 class="home-product-item__name">
                                            {{this.productTitle}}
                                        </h3>
                                    </a>

                                    {{else}}
                                    <a href="/product/{{this._id}}">
                                        <div class="home-product-item__img">
                                            {{#if productImage}}
                                            <img class="img-fluid img-min" src="{{this.productImage}}" alt="...">
                                            {{else}}
                                            <img class="img-fluid img-min" src="/uploads/placeholder2.jpg" alt="...">
                                            {{/if}}
                                        </div>
                                        <h3 class="product-title product-title-home top-pad-10">
                                            {{this.productTitle}}
                                        </h3>
                                    </a>
                                    {{/if}}
                                    {{#if variants}}
                                    <div class="col-md-12">
                                        {{#if @root.config.showHomepageVariants}}
                                        <select id="productVariant-{{this._id}}"
                                            class="productVariant form-control mb-2">
                                            {{#each variants}}
                                            <option value="{{this._id}}" data-price="{{this.price}}">
                                                {{this.title}} -
                                                {{this.price}}{{currencySymbol @root.config.currencySymbol}}
                                            </option>
                                            {{/each}}
                                        </select>
                                        {{else}}
                                        <h3 class="home-product-item__price-current">
                                            {{variants.0.price}}{{currencySymbol @root.config.currencySymbol}}
                                        </h3>
                                        {{/if}}
                                    </div>
                                    {{else}}
                                    <h3 class="home-product-item__price-current">
                                        {{productPrice}}{{currencySymbol @root.config.currencySymbol}}
                                    </h3>
                                    {{/if}}
                                    {{!-- <p class="text-center">
