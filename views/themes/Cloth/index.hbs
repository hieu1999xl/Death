                                                    data-id="{{this._id}}" data-link="{{this.productPermalink}}"
                                                    data-has-variants="{{checkProductVariants this.variants}}"
                                                    role="button">{{ @root.__ "Add to cart" }}</a>
                                                {{/if}}
